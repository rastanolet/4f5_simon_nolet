

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center"
    fx:controller="filler.pages.historique.VueHistorique">

	<VBox>
		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Taille de la grille?"/>
		</HBox>
		<HBox alignment="center">
	        <ComboBox fx:id="choixTaille"/>
		</HBox>

		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Qui commence?"/>
		</HBox>

		<VBox>
				<HBox alignment="center">
					<Button fx:id="caseRouge"/>
					<CheckBox fx:id="checkRouge"/>
				</HBox>

				<HBox alignment="center">
					<Button fx:id="caseJaune"/>
					<CheckBox fx:id="checkJaune"/>
				</HBox>

		</VBox>
	</VBox>
</VBox>
